<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>フォロワー</h1>
      <table class="table">
        <% if @users.present? %>
        <tr class="table-secondary">
          <th>ユーザー名</th>
          <th>年齢</th>
          <th>住所</th>
          <th></th>
          <th></th>
        </tr>
          <% @users.each do |user| %>
            <tr class="bg-light">
              <td><%= user.name %></td>
              <td><%= user.age %>代</td>
              <td><%= user.address %></td>
              <td>
                <% if current_user != user %>
                  <%= link_to 'chatを始める', chat_path(user.id, anchor: 'saikabu')%>
                <% end %>
              </td>
              <td><%= link_to "詳細", user_path(user) %></td>
            <% end %>
          <% else %>
            ユーザーはいません
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>