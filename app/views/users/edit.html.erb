<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h4>プロフィール編集</h4>
      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      
        <div class="gender-field">
          <%= f.label :gender %>
          <%= f.label :man, "男性"  %>
          <%= f.radio_button :gender, :男性 %>
          <%= f.label :woman, "女性"  %>
          <%= f.radio_button :gender, :女性 %>
        </div>
        <label for="inputAddress">住所</label>
        <%= f.select :address, User.addresses.keys, {} %><br />
      
        <label for="inputAge">年齢</label>
        <%= f.select :age, [["10代", "10"], ["20代", "20"], ["30代", "30"], ["40代", "40"], ["50代", "50"], ["60代", "60"], ["70代", "70"], ["80代", "80"]], include_blank: "選択して下さい" %><br />
      
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
        <label for="inputImage">プロフィール画像</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br />
      
        <label for="inputIntroduction">紹介文</label><br />
        <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"紹介文"%><br />
        
        <label for="inputAverage_score">平均スコア</label>
        <%= f.select :average_score, [["130代", "130"],["120代", "120"], ["110代", "110"], ["100代", "100"], ["90代", "90"], ["80代", "80"], ["70代", "70"], ["60代", "60"]], include_blank: "選択して下さい" %><br />
        
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>