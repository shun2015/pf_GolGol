<h1>フォロワー</h1>
<% if @users.present? %>
  <% @users.each do |user| %>
      <%= user.name %>
      フォロー数:<%= user.following.count %>
      フォロワー数:<%= user.followers.count %>
      <%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></br>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %> 