<h4 class="text-center pt-3">プロフィール</h4>
<div class="text-center"><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br /></div>
<ul type="none" class=" text-center p-0 mt-2">
  <li><%= user.name %></li>
  <li><%= user.gender %></li>
  <li><%= user.address %></li>
  <li>年齢：<%= user.age %>代</li>
  <li>
    平均スコア：
    <% if user.profile_score.present? %>
      <%= user.profile_score %>代
    <% else %>
      登録していません
    <% end %>
  </li>
  <li>紹介文</li>
</ul>
<div class="word-break">
  <!--入力通りの改行で表示-->
  <%= safe_join(user.introduction.split("\n"),tag(:br)) %>
</div>
<div class="text-center mt-2">
  フォロー
  <%= link_to following_user_path(@user) do %>
    <%= @user.following.count %>
  <% end %>
  フォロワー
  <%= link_to followers_user_path(@user) do %>
    <%= @user.followers.count %>
  <% end %><br>
</div>
<div class="text-center">
  <% unless @user == current_user %>
    <% if current_user.following?(@user) %>
      <%= link_to 'フォローを外す', user_relationships_path(@user), method: :DELETE %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(@user), method: :POST %>
    <% end %>
  <% end %><br>
  <div class="chat mt-2">
    <% if current_user != user %>
      <!--アンカーリンクで遷移後の表示位置の指定-->
      <%= link_to 'chatを始める', chat_path(user.id, anchor: 'saikabu')%>
    <% end %>
  </div>
</div>

<div class="text-center">
  <% if user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(user), class: "fas fa-user-edit" %></p>
  <% end %><br />
</div>