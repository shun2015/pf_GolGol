<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/show', user: @user %>
    </div>

    <div class="col-md-8 offset-1">
      <h4><%= @post.title %></h4>
      <div class="row mt-5">
        <div class="col-md-5">
          <p>プレー日：<%= @post.date.strftime('%Y年%m月%d日') %></p>
        </div>
        <div class="col-md-2">
          <div class="favorite">
            <%= render 'favorites/favorite', post: @post %>
          </div>
          <% if @post.user == current_user %>
            ♡<%= @post.favorites.count %>いいね
          <% end %>
        </div>
        <div class="col-md-3">
          <%= @post.post_comments.count %>件のコメント
        </div>
      </div>
        <div class="row">
          <div class="col-md-4">
          <p>スコア：<%= @post.score %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 mb-3">
          内容<br>
          <!--投稿通りの改行で表示-->
          <%= safe_join(@post.impression.split("\n"),tag(:br)) %>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
          <% if @post.post_images.present? %>
            <% @post.post_images.each do |image| %>
              <%= attachment_image_tag image, :image, :size =>"200x200" %>
            <% end %>
          <% end %>
          </div>
        </div>
        
        <%= @post.created_at.strftime('%Y年%m月%d日%R')%>
        <% if @post.user == current_user %>
          <%= link_to "編集", edit_post_path(@post) %>
        <% end %>
        <% if @post.user == current_user %>
          <%= link_to "削除", post_path(@post), method: :delete, data: {confirm: "削除しますか？"}, class: "text-danger" %>
        <% end %>
        <div class="comments col-md-10 mt-3">
          <h5>コメント一覧</h5>
          <%= render 'post_comments/post_comment', {post: @post, post_comment: @post_comment} %>
        </div>
      </div>
    </div>
  </div>
</div>
