<div class="container mt-4">
  <div class="row text-center">
    <div class="col text-center">
      <h1>投稿編集</h1>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました<br>
        <% @post.errors.full_messages.each do |message| %>
          <%= message %><br>
        <% end %>
      <% end %>
      <%= form_with model: @post, local:true do |f| %>
        <h4 class="my-2">タイトル</h4>
        <%= f.text_field :title, size: "35x1" %>
        <h4 class="my-2">プレー日</h4>
        <%= f.date_select :date %>
        <h4 class="my-2">スコア</h4>
        <%= f.text_field :score, size: "5x1" %>
        <h4 class="my-2">画像</h4>
        <div class="ml-4"><%= f.attachment_field :post_images_images, multiple: true %></div>
        <h4 class="my-2">内容</h4>
        <%= f.text_area :impression, size: "35x5" %><br>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>