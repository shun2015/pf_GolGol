<div class="container mt-4">
  <div class="row text-center">
    <div class="col-md-4 offset-4">
      <h4>投稿フォーム</h4>
      <% if @post.errors.any? %>
        <h3><%= @post.errors.count %>件のエラーが発生しました</h3>
        <% @post.errors.full_messages.each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      <% end %>
      <%= form_with model: @post, local:true do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        <h4>プレー日</h4>
        <%= f.date_select :date %>
        <h4>スコア</h4>
        <%= f.text_field :score %>
        <h4>画像</h4>
        <div class="ml-5"><%= f.attachment_field :post_images_images, multiple: true %></div>
        <h4>内容</h4>
        <%= f.text_area :impression, size: "35x5" %>
        <%= f.hidden_field :exp, :value => 1 %>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>