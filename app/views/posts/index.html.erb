<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h4>投稿一覧</h4>
      <table class="table">
        <tr>
          <th>名前</th>
          <th>スコア</th>
          <th>画像</th>
          <th>コメント件数</th>
        </tr>
        <tr>
        <% @posts.each do |post| %>
          <td>
            <%= link_to post_path(post) do %>
              <%= post.user.name %>
            <% end %>
          </td>
          <td><%= post.score %></td>
          <td>
            <% if post.post_images.present? %>
              <% post.post_images.each do |image| %>
                <%= attachment_image_tag image, :image, :size =>"50x50" %>
              <% end %>
            <% else %>
              画像はありません。
            <% end %>
          </td>
          <td>
            <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
