<% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :image, :size =>'100x100' %>
    <% end %>
    <p>タイトル：<%= post.title %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
    <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
  </div>
<% end %>