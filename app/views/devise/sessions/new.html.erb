<div class="container my-5">
  <div class="card w-25 mx-auto shadow-lg p-md-4">
    <h2 class="text-center">ログイン</h2>
    
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field text-center">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
    
      <div class="field text-center my-3">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field text-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions text-center my-3">
        <%= f.submit "ログイン", class:"btn btn-info" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>