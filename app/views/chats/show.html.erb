<div class="container my-5">
  <div class="row">
    <div class="col">
      <h2 style="text-align:center;"><%= @user.name %> さんとのチャット</h2>

      <table class="table table-borderless">
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %><%= @user.name %></th>
            <th style="text-align: right; font-size: 20px;"><%= attachment_image_tag current_user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %><%= current_user.name %></th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
          <% if chat.user_id != current_user.id %>
          <tbody>
            <tr>
              <th>
                <p style="text-align: left;"><%= chat.message %><br><%= chat.created_at.strftime("%Y-%m-%d-%H:%M") %></p>
              </th>
              <th></th>
            </tr>
          </tbody>
          <% else %>
          <tbody>
            <tr>
              <th></th>
              <th>
                <p style="text-align: right;"><%= chat.message %><br><%= chat.created_at.strftime("%Y-%m-%d-%H:%M") %></p>
              </th>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>
      <div style="text-align:center;">
        <%= form_with model: @chat do |f| %>
          <%= f.text_field :message %>
          <%= f.hidden_field :room_id %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>